<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <table class="new-user-create">
          <tr>
            <th class="page-heading">ユーザー新規登録</th>
          </tr>
          <tr>
            <th><span class="indispensable">*</span> お名前(全角) </th>
            <td><%= f.text_area :last_name_kanji, class:"input-name", id:"last-name", placeholder:"例) 藤" %></td>
            <td><%= f.text_area :first_name_kanji, class:"input-name", id:"first-name", placeholder:"例) 峰子" %></td>
          </tr>
          <tr>
            <th> <span class="indispensable">*</span>お名前カナ(全角) </th>
            <td><%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) フジ" %></td>
            <td><%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ミネコ" %></td>
          </tr>
          <tr>
            <th><span class="indispensable">*</span>メールアドレス </th>
            <td><%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %></td>
          </tr>
          <tr>
            <th><span class="indispensable">*</span>パスワード </th>
            <td><%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %></td>
            <td> ※英字と数字の両方を含めて設定してください</td>
          </tr>
          <tr>
            <th><span class="indispensable">*</span>パスワード(確認)</th>
            <td><%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %></td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "新規登録", class: :user_create_btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>